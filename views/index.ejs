<!DOCTYPE html>
<html ng-app="yamyday">
    <head>
        <title><%= title %></title>
        <link rel="stylesheet" type="text/css" href="/stylesheets/pure-min.css" />
        <link rel="stylesheet" type="text/css" href="/stylesheets/ng-animation.css" />
        <link rel="stylesheet" type="text/css" href="/stylesheets/style.css" />
    </head>
    <body>
        <div class="basic-bg" ng-controller="MainCtrl">
            <div class="pages layoutHeadline invisible">
                <div class="page headline">
                    <div class="content">
                        <p><img src="{{ headline.imgUrl }}" /></p>
                        <h1>{{ headline.title }}</h1>
                        <h3>{{ headline.subTitle }}</h3>
                        <hr><hr>
                        <b>&gt;</b><!--
                     --><span>{{ headline.secondTitle }}</span><!--
                     --><b>&gt;</b><!--
                     --><span>{{ headline.thirdTitle }}</span><!--
                     --><b>&gt;</b>
                    </div>
                </div>
                <div class="page one hidden">
                    <div class="content">
                        <div class="pure-g"><!--
                         --><div class="pure-u-1-2 left">
                                <div class="p10"><p class="p10">{{ one.content }}</p></div>
                                <span class="add-store" ng-click="toggleStore(one, $event)"></span>
                            </div><!--
                         --><div class="pure-u-1-2">
                                <ul class="shares p10"><li ng-repeat="share in one.shares">
                                    <% include share %>
                                </li></ul>
                            </div><!--
                     --></div>
                    </div>
                </div>
                <div class="page two hidden">
                    <div class="content">
                        <div class="pure-g"><!--
                         --><div class="pure-u-1-2">
                                <%- sectionHelper(2, 'two', 0, 1) %>
                                <%- sectionHelper(2, 'two', 1, 2) %>
                            </div><!--
                         --><div class="pure-u-1-2">
                                <%- sectionHelper(2, 'two', 2, 1) %>
                                <%- sectionHelper(2, 'two', 3, 2) %>
                            </div><!--
                     --></div>
                    </div>
                </div>
                <div class="page three hidden">
                    <div class="content">
                        <div class="pure-g"><!--
                         --><div class="pure-u-1-2">
                                <%- sectionHelper(2, 'three', 0, 1) %>
                                <%- sectionHelper(2, 'three', 1, 2) %>
                            </div><!--
                         --><div class="pure-u-1-2">
                                <%- sectionHelper(3, 'three', 2, 3) %>
                                <%- sectionHelper(3, 'three', 3, 3) %>
                                <%- sectionHelper(3, 'three', 4, 3) %>
                            </div><!--
                     --></div>
                    </div>
                </div>
                <div class="buttons">
                    <span id="prev"></span>
                    <span id="next"></span>
                </div>
            </div>
            <div class="store" ng-controller="StoreCtrl">
                <div class="store-content">
                    <div class="toggle-store" ng-click="toggleStoreView()"></div>
                    <ul><li ng-repeat="store in stores">
                        <h1>{{ store.newsID }}</h1>
                    </li></ul>
                </div>
            </div>
            <div class="loading">Loading...</div>
            <div id="scissor"></div>
        </div>
        <div class="page detail hidden" ng-controller="DetailPageCtrl"><% include detail %></div>
        <script type="text/javascript" src="/javascripts/jquery-2.0.3.js"></script>
        <script type="text/javascript" src="/javascripts/angular-1.2.0-rc3.js"></script>
        <script type="text/javascript" src="/javascripts/angular-animate.js"></script>
        <script type="text/javascript" src="/javascripts/app.js"></script>
    </body>
</html>